<rules>
  
  <file name="items">
    <rule xpath="/items/item" key="name" />
    <rule xpath="/items/item/property" key="name|class" />
    <rule xpath="/items/item/property/property" key="name|class" />
    <rule xpath="/items/item/property/property/property" key="name|class" />
  </file>

  <file name="recipes">
    <rule xpath="/recipes/recipe" key="name" />
    <rule xpath="/recipes/recipe/ingredient" key="name+count+grid" />
    <rule xpath="/recipes/recipe/ingredient" key="name+count" multi="true"/>
  </file>

  <file name="loot">
    <rule xpath="/lootcontainers/lootplaceholders" key="name" />
    <rule xpath="/lootcontainers/lootplaceholders/block" key="name+prob" />
    <rule xpath="/lootcontainers/lootplaceholders/block" key="name" />

    <rule xpath="/lootcontainers/lootgroup" key="name" />
    <rule xpath="/lootcontainers/lootgroup/item" key="name|group" />

    <rule xpath="/lootcontainers/lootcontainer" key="id" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="group+count+prob" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="group+count" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="group+prob" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="group" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="name+count+prob" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="name+count" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="name+prob" />
    <rule xpath="/lootcontainers/lootcontainer/item" key="name" />
  </file>
  
  <file name="blocks">
    <rule xpath="/blocks/block" key="id" />
    <rule xpath="/blocks/block/property" key="name|class" />
    <rule xpath="/blocks/block/property" key="name+param1" />
    <rule xpath="/blocks/block/drop" key="event" />
    <rule xpath="/blocks/block/drop" key="event+name" />
    <rule xpath="/blocks/block/drop" key="event+value" />
    <rule xpath="/blocks/block/property/property" key="name|class" />
    <rule xpath="/blocks/block/property/property/property" key="name|class" />
  </file>
  
</rules>